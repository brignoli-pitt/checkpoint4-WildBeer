{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Avatar</th>
                <td>{{ user.avatar }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ user.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
        </tbody>
    </table>

    {% if (app.user.id == user.id) %}
        <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}

    <h1>Mes bières</h1>

    {% if (app.user.id == user.id) %}
        <a href="{{ path('app_beer_new') }}">Create new</a>
    {% endif %}

    {% for beer in beers %}
        <div>
            <h3><a href="{{ path('app_beer_show', {id : beer.id}) }}">{{ beer.name }}</a></h3>
            <p>{{ beer.description }}</p>
            <p>{{ beer.alcohol_content }}</p>
            <p>{{ beer.category_id }}</p>
            {% if (app.user.id == beer.created_by_id) %}
            <a href="{{ path('app_beer_edit', {'id': beer.id}) }}">edit</a>
            {{ include('beer/_delete_form.html.twig') }}
            {% endif %}
        </div>
    {% else %}
        Aucune bière trouvée.
    {% endfor %}
{% endblock %}
