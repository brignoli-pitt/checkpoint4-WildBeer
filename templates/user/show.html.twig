{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Avatar</th>
                <td>{{ user.avatar }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ user.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
        </tbody>
    </table>

    {% if (app.user.id == user.id) %}
        <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}

    <div class="text-center">
        <div>
            <h1>Mes bières</h1>
        </div>
        <div>
            {% if (app.user.id == user.id) %}
                <a href="{{ path('app_beer_new') }}" class="btn btn-sm btn-outline-secondary">Create new</a>
            {% endif %}
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        {% for beer in beers %}
        <div class="col">
            <div class="card shadow-sm">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">img</text></svg>
                <div class="card-body">
                    <h5 class="card-title text-center">{{ beer.name }}</h5>
                    <p class="card-text">{{ beer.description|striptags|length > 200 ? beer.description|striptags|slice(0, 200) ~ '...' : beer.description|striptags }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                                <a href="{{ path('app_beer_edit', {'id': beer.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                            {% if (app.user.id == beer.created_by_id) %}
                                <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_beer_edit', {'id': beer.id}) }}">edit</a>
                                {#
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <a href="{{ path('app_beer_delete', {'id': beer.id}) }}">delete</a>
                            </button>
                                #}
                            {% endif %}
                        </div>
                        <small class="text-muted">Alc {{ beer.alcohol_content }} %</small>
                    </div>
                </div>
            </div>
        </div>


        {% else %}
            Aucune bière trouvée.
        {% endfor %}
    </div>
{% endblock %}
