{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<div class="text-center d-flex justify-content-center shadow-sm p-5">
    <div class=" card w-50 align-self-center text-center p-2 border-0 shadow-lg g-4">
        <div class="mt-3">
            <h1>Profil</h1>
        </div>
        <div class="m-4">
            <table class="table p-3">
                <tbody>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.location }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ user.description }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="mb-3">
            {% if (app.user.id == user.id) %}
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary w-25">Modifier</a>
            {% endif %}
        </div>

    </div>
</div>



    <div class="text-center mt-5">
        <div>
            <h1>Mes bières</h1>
        </div>
        <div>
            {% if (app.user.id == user.id) %}
                <a href="{{ path('app_beer_new') }}" class="btn btn-sm btn-outline-secondary w-25 mt-5">Ajouter une bière</a>
            {% endif %}
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-5 m-5">
        {% for beer in beers %}
        <div class="col">
            <div class="card shadow-lg">
                <img src="{{ asset('build/img/beer-pic.780b20b4.jpeg') }}" class="card-img-top" alt="some beer">
                <div class="card-body">
                    <h5 class="card-title text-center">{{ beer.name }}</h5>
                    <p class="card-text">{{ beer.description|striptags|length > 200 ? beer.description|striptags|slice(0, 200) ~ '...' : beer.description|striptags }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                                <a href="{{ path('app_beer_show', {'id': beer.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                            {% if (app.user.id == beer.created_by_id) %}
                                <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_beer_edit', {'id': beer.id}) }}">edit</a>
                                {#
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <a href="{{ path('app_beer_delete', {'id': beer.id}) }}">delete</a>
                            </button>
                                #}
                            {% endif %}
                        </div>
                        <small class="text-muted">Alc {{ beer.alcohol_content }} %</small>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            Aucune bière trouvée.
        {% endfor %}
    </div>
{% endblock %}
