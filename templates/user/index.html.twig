{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Location</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.location }}</td>
                <td>{{ user.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de Wilder trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
