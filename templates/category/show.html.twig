{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
   <div >
    <div class="card mb-5 mt-5 w-75 p-5 text-center m-auto">
        <img src="assets/img/beer-category.jpg" class="card-img-top" alt="some beer">
        <div class="card-body">
            <h1 class="card-title">{{ category.name }}</h1>
            <h5 class="card-text"></h5>
        </div>
    </div>
       <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 m-5">
           {% for beer in beers %}
               <div class="col">
                   <div class="card shadow-sm">
                       <svg class="bd-placeholder-img card-img-top" width="100%" height="200" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">img</text></svg>
                       <div class="card-body">
                           <h5 class="card-title text-center">{{ beer.name }}</h5>
                           <p class="card-text">{{ beer.description|striptags|length > 175 ? beer.description|striptags|slice(0, 175) ~ '...' : beer.description|striptags }}</p>
                           <div class="d-flex justify-content-between align-items-center">
                               <div class="btn-group">
                                   <a href="{{ path('app_beer_edit', {'id': beer.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                               </div>
                               <small class="text-muted">Alc {{ beer.alcoholContent }} %</small>
                           </div>
                       </div>
                   </div>
               </div>
           {% else %}
               Aucune bière trouvée.
           {% endfor %}
       </div>
   </div>
{% endblock %}
